<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/view_titlebar"/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:text="安全等级"
        />
    <RadioGroup
        android:id="@+id/set_safety_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <RadioButton 
            android:id="@+id/safety_level_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="仅在打开时输入长密码，返回时无密码"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="6dp"
            android:background="#999999"/>
        <RadioButton 
            android:id="@+id/safety_level_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回时可输入短密码（长密码的前四位），错误一次后则需长密码"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:background="#999999"/>
        <RadioButton 
            android:id="@+id/safety_level_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="始终需长密码"/>"
    </RadioGroup>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:text="首页视图"
        />
    <CheckBox 
        android:id="@+id/check_wordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字数"/>
    <CheckBox 
        android:id="@+id/check_createAndEditTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建与修改时间"/>
    <CheckBox 
        android:id="@+id/check_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签"/>
    <CheckBox 
        android:id="@+id/check_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="摘要"/>
    <RadioGroup
        android:id="@+id/set_summary_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <RadioButton 
            android:id="@+id/summary_short"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="仅显示前三行"/>
        <RadioButton 
            android:id="@+id/summary_long"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="显示全文"/>
    </RadioGroup>"
</LinearLayout>