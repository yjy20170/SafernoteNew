<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="4dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp" >
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="22sp"
            android:textColor="@color/myColorTitle"
            />
        <ImageView 
            android:id="@+id/itemStick"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="26dp"
            android:src="@drawable/pin"
            />
        <TextView
            android:id="@+id/itemWordCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#50505A"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/itemCreateAndEditTimeLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp">
        <TextView 
            android:id="@+id/itemCreateTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="13sp"
            android:textColor="#70707A"
            />
        <TextView 
            android:id="@+id/itemEditTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#70707A"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/itemTagLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="3dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/tag_small"
            />
        <TextView 
            android:id="@+id/itemTags"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="无"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/itemSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="7dp"
        android:textColor="@color/myColorSummary"
        android:textSize="14sp"
        />

</LinearLayout>
